      <div class="form-add-new">
        <form action="/delete-user" method="post">
        <fieldset>
            <legend>Delete Users</legend>
            <div class="input-group d-none">
                <label for="">Id</label>
                <input
                 type="text"
                  name="userId"
                  value="<%= userEdit.id %>"
                  >
            </div>
            <div class="input-group">
                <label >Are you sure you want to delete the user with this email?</label>
                <input
                 type="text"
                  name="email"
                  value="<%= userEdit.email %>"
                  >
            </div>
            <button> Confirm</button>
        </fieldset>
    </form>
      </div>
      
